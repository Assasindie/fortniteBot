{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "allowJs": false
  },
  "exclude": [
    "node_modules"
  ]
}